{
  "repository": {
    "name": "Virtual Collection Registry",
    "host_name": "clarin",
    "host_netloc": "https://collections.clarin.eu",
    "api": {
        "base": "https://collections.clarin.eu/service/v1/collections/$record_id"
    },
    "hdl": {"id": "11372", "format": "$hdl"},
    "url": {"format": "https://collections.clarin.eu/service/v1/collections/$record_id", "regex": ".*/(?P<record_id>[^?]+).*$", "headers": {
      "Accept": "application/xml"}
    },
    "parser": {
      "type": "cmdi",
      "config": {
        "reverse_pid": ".//MdSelfLink",
        "description": ".//VirtualCollection/Description",
        "collection_title": ",.//VirtualCollection/Name",
        "license": ".//Reproducibility",
        "ref_file": {
          "path": ".//ResourceProxy[ResourceType='$resource_type']/ResourceRef"
        }
      }
    },
    "test_examples": {
      "url": "https://collections.clarin.eu/service/v1/collections/1033",
      "hdl": "http://hdl.handle.net/11372/VC-1033"}
  }
}